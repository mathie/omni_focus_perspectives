<%= render layout: 'perspectives/show', locals: { perspective: @perspective } do |perspective| %>
  <dt>Open in a New Window</dt>
  <dd><%= perspective.open_in_a_new_window ? "Yes" : "No" %></dd>

  <dt>Group Items By</dt>
  <dd><%= perspective.group_items_by.humanize %></dd>

  <dt>Sort Items By</dt>
  <dd><%= perspective.sort_items_by.humanize %></dd>

  <dt>Filter By Status</dt>
  <dd><%= perspective.filter_by_status.humanize %></dd>

  <dt>Filter By Availability</dt>
  <dd><%= perspective.filter_by_availability.humanize %></dd>

  <dt>Filter By Duration</dt>
  <dd><%= perspective.filter_by_duration.humanize %></dd>

  <dt>Filter Contexts</dt>
  <dd><%= perspective.filter_contexts.humanize %></dd>

  <dt>Find Text</dt>
  <dd><%= perspective.find_text %></dd>
<% end %>
