<%= render layout: 'perspectives/form', locals: { perspective: perspective } do |f| %>
  <%= f.check_box :open_in_a_new_window %>

  <% [ :group_items_by, :sort_items_by, :filter_by_status, :filter_by_availability, :filter_by_duration, :filter_contexts ].each do |field| %>
    <%= f.select field, perspective.class.send(field.to_s.pluralize).map { |k, v| [ k.humanize, k ] } %>
  <% end %>

  <%= f.text_field :find_text %>
<% end %>
